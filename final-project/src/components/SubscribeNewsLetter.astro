<section class="newsletter-section">
  <div class="container">
    <h2 class="title">Subscribe to our newsletter</h2>
    <p class="description">
      Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse
      varius enim in eros elementum tristique.
    </p>
    <form class="newsletter-form" onsubmit="event.preventDefault();">
      <input
        type="email"
        placeholder="Enter your email"
        class="email-input"
        required
      />
      <button type="submit" class="submit-btn">Sign Up</button>
    </form>
    <p class="disclaimer">
      By clicking Sign Up you're confirming that you agree with our <a href="#"
        >Terms and Conditions</a
      >.
    </p>
  </div>
</section>

<style>
  .newsletter-section {
    display: none; /* Hidden on mobile */
    background-color: #fff;
    padding: 80px 24px;
    text-align: center;
    font-family: "Roboto", sans-serif;
  }

  .container {
    max-width: 768px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
  }

  .title {
    font-size: 48px;
    font-weight: 700;
    line-height: 1.2;
    color: #000;
    margin: 0;
  }

  .description {
    font-size: 18px;
    color: #000;
    line-height: 1.5;
    margin: 0;
    max-width: 768px;
  }

  .newsletter-form {
    display: flex;
    gap: 16px;
    width: 100%;
    justify-content: center;
    margin-top: 16px;
  }

  .email-input {
    width: 388px;
    padding: 12px 24px;
    border: 1px solid #000;
    font-size: 16px;
    color: #000;
    outline: none;
    background-color: transparent;
    border-radius: 4px;
  }

  .email-input::placeholder {
    color: #505050;
  }

  .submit-btn {
    padding: 12px 24px;
    background-color: #000;
    color: #fff;
    border: 1px solid #000;
    font-size: 16px;
    font-weight: 400;
    cursor: pointer;
    white-space: nowrap;
    transition: background-color 0.2s;
    border-radius: 4px;
  }

  .submit-btn:hover {
    background-color: #333;
  }

  .disclaimer {
    font-size: 12px;
    color: #000;
    margin-top: 0;
  }

  .disclaimer a {
    text-decoration: underline;
    color: inherit;
  }

  @media (min-width: 1200px) {
    .newsletter-section {
      display: block;
    }
  }
</style>
